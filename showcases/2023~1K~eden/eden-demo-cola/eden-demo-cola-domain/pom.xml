		<dependency>
			<groupId>org.ylzl</groupId>
			<artifactId>eden-cola-domain</artifactId>
		</dependency>

		<!-- 日志组件 -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
