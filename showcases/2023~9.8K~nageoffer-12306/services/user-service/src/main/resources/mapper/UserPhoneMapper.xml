<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.opengoofy.index12306.biz.userservice.dao.mapper.UserPhoneMapper">

    <!-- 注销用户 -->
    <update id="deletionUser" parameterType="org.opengoofy.index12306.biz.userservice.dao.entity.UserPhoneDO">
        update t_user_phone
        set deletion_time = #{deletionTime},
            del_flag      = '1'
        where phone = #{phone}
          and del_flag = '0'
    </update>
</mapper>