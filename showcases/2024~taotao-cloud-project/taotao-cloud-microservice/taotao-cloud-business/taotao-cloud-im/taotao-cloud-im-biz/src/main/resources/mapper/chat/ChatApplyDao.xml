<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.modules.chat.dao.ChatApplyDao">

    <!-- 字段集 -->
    <sql id="baseSql">
        select id, from_id, to_id, target_id, apply_type, apply_status, apply_source, reason, create_time from chat_apply
    </sql>

    <!-- 查询列表字段 -->
    <select id="queryList" resultType="com.platform.modules.chat.domain.ChatApply">
        <include refid="baseSql"/>
        <where>
            <if test="toId != null">
                and to_id = #{toId}
            </if>
            <if test="targetId != null">
                and target_id = #{targetId}
            </if>
            <if test="applyStatus != null">
                and apply_status = #{applyStatus.code}
            </if>
        </where>
    </select>

</mapper>
